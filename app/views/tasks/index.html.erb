<h1>tasks planned </h1>

<%= render "layouts/flash" %>

<% if !@tasks.empty? %>
<div class="container text-center">
<div class="row row-cols-2">
<% @tasks.each do |task| %>
<div class="col"><strong><%= task.name %></strong><br>
<%= task.description %><br>
<%= task.deadline.strftime('due time : %d/%m/%Y') %><br>

<%= link_to 'Edit', edit_task_path(task), class: "btn btn-outline-secondary"%>
<%= link_to 'Delete', task, method: :delete, class: "btn btn-outline-secondary" %><br>

<% if !task.users.empty? %>
<h4>Users involved in the task :</h4>

<% task.users.each do |user| %>
 <p>- <%= user.name %></p>

<%end%>

<br>
</div>
<%else%>
 <strong>No one is assigned to this task</strong><br>
<%end%>
<%end%>

</div>
</div>
<%else%>
<h2>There is no task planned </h2>
<%end%>

